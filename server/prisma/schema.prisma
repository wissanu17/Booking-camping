generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Profile {
  id        Int        @id @default(autoincrement())
  clerkId   String     @unique
  firstname String
  lastname  String
  email     String
  createAt  DateTime   @default(now())
  updateAt  DateTime   @updatedAt
  // Alt Shift F
  landmarks Landmark[]
}

model Landmark {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  lat         Float
  lng         Float
  price       Int
  category    String
  createAt    DateTime @default(now())
  updateAt    DateTime @updatedAt
  Profile     Profile? @relation(fields: [profileId], references: [clerkId])
  profileId   String?
}
